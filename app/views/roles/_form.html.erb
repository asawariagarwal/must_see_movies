<% was_validated = role.errors.any? %>

<%= form_with(model: role, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for actor_id start -->
  <div class="form-group">
    <% actor_class = "form-control" %>
    <% actor_was_invalid = role.errors.include?(:actor) %>

    <% if was_validated %>
      <% if actor_was_invalid %>
        <% actor_class << " is-invalid" %>
      <% else %>
        <% actor_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :actor_id %>
    <!-- Input for actor_id start -->
    <%= f.collection_select :actor_id, Actor.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for actor_id end -->
    <% if actor_was_invalid %>
      <% role.errors.full_messages_for(:actor).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for actor_id end -->
  <!-- Label and input for movie_id start -->
  <div class="form-group">
    <% movie_class = "form-control" %>
    <% movie_was_invalid = role.errors.include?(:movie) %>

    <% if was_validated %>
      <% if movie_was_invalid %>
        <% movie_class << " is-invalid" %>
      <% else %>
        <% movie_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_id %>
    <!-- Input for movie_id start -->
    <%= f.collection_select :movie_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for movie_id end -->
    <% if movie_was_invalid %>
      <% role.errors.full_messages_for(:movie).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for movie_id end -->
  <!-- Label and input for role_name start -->
  <div class="form-group">
    <% role_name_class = "form-control" %>
    <% role_name_was_invalid = role.errors.include?(:role_name) %>

    <% if was_validated %>
      <% if role_name_was_invalid %>
        <% role_name_class << " is-invalid" %>
      <% else %>
        <% role_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :role_name %>
    <!-- Input for role_name start -->
    <%= f.text_field :role_name, class: role_name_class, placeholder: "Enter role name" %>
    <!-- Input for role_name end -->
    <% if role_name_was_invalid %>
      <% role.errors.full_messages_for(:role_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for role_name end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
